<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" android:clickable="true" android:background="#010101">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="415dp" android:layout_gravity="center"
            android:layout_marginBottom="-238dp">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/connect_button" android:layout_gravity="center_horizontal" android:minWidth="100dp"/>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Create"
                android:id="@+id/create_button" android:layout_gravity="center_horizontal" android:minWidth="100dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center_horizontal|top">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:background="@drawable/crowdmusic"/>
    </LinearLayout>
</FrameLayout>
